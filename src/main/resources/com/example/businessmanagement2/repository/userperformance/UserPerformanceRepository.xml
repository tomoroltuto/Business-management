<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.businessmanagement2.repository.userperformance.UserPerformanceRepository">

  <resultMap id="UserPerformanceMap" type="com.example.businessmanagement2.repository.userperformance.UserPerformance">
    <id column="user_id" property="userId"/>
    <result column="company_name" property="companyName"/>
    <result column="user_name" property="userName"/>
    <collection property="performanceEntities" ofType="com.example.businessmanagement2.repository.performance.PerformanceEntity">
      <id column="performance_id" property="performanceId"/>
      <id column="user_id" property="userId"/>
      <result column="working_date" property="workingDate"/>
      <result column="place" property="place"/>
      <result column="work_content" property="workContent"/>
      <result column="number_of_people" property="numberOfPeople"/>
    </collection>
  </resultMap>

  <select id="findById" resultMap="UserPerformanceMap">
    SELECT
    *
    FROM
    users
    INNER JOIN
    performances
    ON
    users.user_id = performances.user_id
    WHERE
    users.user_id = #{userId}
  </select>

  <select id="findUserPerformanceList" resultMap="UserPerformanceMap">
    SELECT
    *
    FROM
    users
    INNER JOIN
    performances
    ON
    users.user_id = performances.user_id
  </select>

</mapper>
